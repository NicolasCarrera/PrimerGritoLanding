---
import amazon from "../assets/icons/amazon-logo.svg";

interface Props {
  text: string;
}

const { text } = Astro.props;
---

<a
  href="https://www.amazon.com/dp/B0G6L46X5S"
  class="btn"
  target="_blank"
  rel="noopener noreferrer"
>
  <span class="btn-content">
    <span class="btn-text">{text}</span>
    <img src={amazon.src} alt="Amazon" width="30" height="30" loading="lazy" />
  </span>
</a>

<style>
  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    background-color: #eab308;
    color: #000;
    border-radius: 0.25rem;
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.5px;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(212, 166, 68, 0.4);
  }

  .btn:focus-visible {
    outline: 3px solid #0a2d54;
    outline-offset: 3px;
  }

  .btn-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .btn-text {
    white-space: nowrap;
  }
</style>
